<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:elevation="0dp"
    app:cardElevation="0dp"
    app:cardUseCompatPadding="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/carImage"
            android:layout_width="142dp"
            android:layout_height="95dp"
            android:background="@color/white"
            android:elevation="0dp"
            app:cardCornerRadius="6dp"
            >
            <ImageView
                android:id="@+id/carPhoto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/rectangle_20"
                android:scaleType="centerCrop"
                />
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/tvPartName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Front side / Face avant"
            android:layout_below="@id/carImage"
            android:layout_alignEnd="@id/carImage"
            android:layout_alignStart="@id/carImage"
            android:maxLines="2"
            android:textColor="@color/_121212"
            android:textSize="13sp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/roboto_bold"
            />
        <TextView
            android:id="@+id/tvTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="09:00 PM"
            android:layout_below="@id/tvPartName"
            android:layout_alignEnd="@id/carImage"
            android:layout_alignStart="@id/carImage"
            android:maxLines="2"
            android:textColor="@color/_505255"
            android:textSize="13sp"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/sf_pro_regular"
            />
    </RelativeLayout>
</androidx.cardview.widget.CardView>