<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/containerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/carImageCard"
            android:layout_width="94dp"
            android:layout_height="50dp"
            app:cardCornerRadius="8dp"
            android:background="@android:color/transparent"
            app:cardElevation="0dp"
            android:layout_centerVertical="true"
            >
            <ImageView
                android:id="@+id/carImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/as245"
                />
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/carImageCard"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_marginStart="12dp"
            >
            <TextView
                android:id="@+id/tvTicketNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Abc-1234"
                android:textSize="13sp"
                android:textColor="@color/primary"
                android:fontFamily="@font/roboto_bold"
                />
            <TextView
                android:id="@+id/tvPlateNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Abc-1234"
                android:textSize="13sp"
                android:textColor="@color/_505255"
                android:fontFamily="@font/sf_pro_bold"
                />
            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23 DEC 2023, 09:00 PM"
                android:textSize="13sp"
                android:textColor="@color/_505255"
                android:fontFamily="@font/sf_pro_regular"
                />
        </LinearLayout>
        <ImageButton
            android:id="@+id/arrow_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/report_status"
            android:background="@android:color/transparent"
            android:layout_marginTop="8dp"
            android:src="@drawable/arrow_go"
            />
        <RelativeLayout
            android:id="@+id/report_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/arrival_case_status_background"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp">
                <ImageView
                    android:id="@+id/imgStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/vector1"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/txtStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/damages"
                    android:textSize="15sp"
                    android:visibility="gone"
                    android:fontFamily="@font/sf_pro_regular"
                    android:textColor="@color/_25741F"
                    />
            </LinearLayout>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="24dp"
            android:background="@color/_DFE8F6"
            android:layout_below="@id/carImageCard"/>
    </RelativeLayout>
</RelativeLayout>